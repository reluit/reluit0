# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://tpuaizvpmurdekelxvna.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Domain Configuration
# The root domain for your multi-tenant setup (e.g., reluit.com)
ROOT_DOMAIN=reluit.com

# Admin subdomain (defaults to "admin" if not set)
# The admin dashboard will be available at admin.${ROOT_DOMAIN}
ADMIN_SUBDOMAIN=admin

# Site URL for email redirects (defaults to https://reluit.com)
NEXT_PUBLIC_SITE_URL=https://reluit.com

# ========================================
# Composio Integration Configuration
# ========================================
# Get your API key from https://composio.dev

# Core Composio Configuration (server-side)
COMPOSIO_API_KEY=your_composio_api_key_here

# Core Composio Configuration (client-side - required for browser)
# IMPORTANT: Add NEXT_PUBLIC_ prefix to make it accessible in the browser
NEXT_PUBLIC_COMPOSIO_API_KEY=your_composio_api_key_here

COMPOSIO_ENVIRONMENT=production
# Options: production, development, testing

# ========================================
# Calendly Integration
# ========================================
# Register at: https://developer.calendly.com/
# Use the "AUTH CONFIG ID" from your Composio dashboard for Calendly
# Add NEXT_PUBLIC_ prefix to make it accessible in the browser
NEXT_PUBLIC_CALENDLY_AUTH_CONFIG_ID=your_calendly_auth_config_id_here

# ========================================
# Cal.com Integration
# ========================================
# Get API key from: https://cal.com/settings/developer
# Use the "AUTH CONFIG ID" from your Composio dashboard for Cal.com
# Add NEXT_PUBLIC_ prefix to make it accessible in the browser
NEXT_PUBLIC_CAL_AUTH_CONFIG_ID=your_cal_auth_config_id_here

# ========================================
# HubSpot Integration
# ========================================
# Register at: https://developers.hubspot.com/
# Use the "AUTH CONFIG ID" from your Composio dashboard for HubSpot
# Add NEXT_PUBLIC_ prefix to make it accessible in the browser
NEXT_PUBLIC_HUBSPOT_AUTH_CONFIG_ID=your_hubspot_auth_config_id_here

# ========================================
# Pipedrive Integration
# ========================================
# Get API token from: https://pipedrive.com/app/settings/api
# Use the "AUTH CONFIG ID" from your Composio dashboard for Pipedrive
# Add NEXT_PUBLIC_ prefix to make it accessible in the browser
NEXT_PUBLIC_PIPEDRIVE_AUTH_CONFIG_ID=your_pipedrive_auth_config_id_here

# ========================================
# Salesforce Integration
# ========================================
# Register at: https://developer.salesforce.com/
# For production: https://login.salesforce.com
# For sandbox: https://test.salesforce.com
# Use the "AUTH CONFIG ID" from your Composio dashboard for Salesforce
# Add NEXT_PUBLIC_ prefix to make it accessible in the browser
NEXT_PUBLIC_SALESFORCE_AUTH_CONFIG_ID=your_salesforce_auth_config_id_here
